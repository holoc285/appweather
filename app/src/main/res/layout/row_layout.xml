<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:weightSum="2"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/row_textViewDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ngay thang"
            android:textColor="#670578"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:gravity="center"
            android:id="@+id/row_textViewStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trang thai"
            android:textColor="#a008b4"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <ImageView
                android:id="@+id/row_imageViewStatus"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher_round" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/row_textViewMaxTemp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Max Temp"
                android:textSize="18dp" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/row_textViewMinTemp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mix Temp"
                android:textSize="18dp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>